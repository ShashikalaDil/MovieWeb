@model List<MovieWeb.Models.Movie>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Action Movies</h2>
            <p class="lead">Browse action-packed movies and TV shows.</p>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-4">
                <div class="card shadow border-0 d-flex flex-column" style="height: 100%;">
                    <img src="~/images/movie1.jpg" class="card-img-top" alt="@movie.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Director</p>
                        <p class="card-text">@movie.ReleaseDate</p>
                        <p class="card-text flex-grow-1">@movie.Description</p>
                        @*<a asp-controller="" asp-action="" class="btn btn-primary">Details</a>*@
                    </div>
                </div>
            </div>
        }
    </div>
</div>
